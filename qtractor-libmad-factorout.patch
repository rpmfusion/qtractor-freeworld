+qtractorAudioFile* getQtractorAudioMadFile(unsigned int iBufferSize) 
+{
+	void* madplugin = madPluginLibrary();
+	// reset errors
+	dlerror();
+	// load the symbols
+	create_t* create_qtractorAudioMadFile = (create_t*) dlsym(madplugin, "createQtractorAudioMadFile");
