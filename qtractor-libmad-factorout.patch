+void* madPluginLibrary()
+{
+	// load the mad plugin library
+	void* madplugin = dlopen(CONFIG_PLUGINDIR "/libqtractor_mad.so", RTLD_LAZY);
+	if (!madplugin) {
+#ifdef CONFIG_DEBUG
+		qDebug("Cannot load library: %s", dlerror());
